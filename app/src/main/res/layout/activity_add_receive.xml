<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.bluemap.geecitypoperty.receive.AddReceiveActivity">


    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/common_toolbar"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/aar_ll_room"
                android:onClick="selectRoom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择房间"
                    android:id="@+id/aar_tv_room"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView8"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/common_ic_arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/aar_et_contact"
                    android:layout_weight="1"
                    android:hint="联系人" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/aar_et_tel"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:hint="联系电话"
                    android:phoneNumber="true" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:id="@+id/aar_ll_complaint"
                android:onClick="selectRoom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择投诉对象或直接填写"
                    android:id="@+id/aar_tv_complaint"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView9"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/common_ic_arrow_right" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aar_et_complaint"
                android:layout_weight="1"
                android:hint="请填写投诉对象（必填）" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户反应："
                    android:id="@+id/textView37"
                    android:layout_gravity="center_vertical" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/aar_spn_reaction"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二次及以上投诉"
                android:id="@+id/aar_cb_two"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户预约时间："
                    android:id="@+id/textView39"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical" />

                <net.bluemap.geecitypoperty.common.DateTimePicker
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/aar_dtp_time" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aar_et_content"
                android:hint="请填写接待描述" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接待类型："
                    android:id="@+id/textView42"
                    android:layout_gravity="center_vertical" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/aar_spn_type"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/aar_iv_photo"
                android:layout_gravity="center_horizontal"
                android:background="@color/CONCRETE"
                android:src="@mipmap/common_ic_camera"
                android:onClick="onPhoto"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="104dp"
                android:id="@+id/aar_rv_photo"
                android:layout_marginTop="4dp" />


            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="提交"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:background="@drawable/btn_orange_selector"
                android:onClick="submit" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
